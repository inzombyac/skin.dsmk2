<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window type="dialog" id="129">
	<defaultcontrol always="true">3110</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<controls>
		<include>GlobalBackground</include>
		<include>Furniture_Header</include>
		<include>Furniture_NowPlaying</include>
		<include>Furniture_Clock</include>
		<!--Header -->
		<control type="panel" id="3110">
			<viewtype label="Color Picker">icon</viewtype>
			<posx>60</posx>
			<posy>175</posy>
			<width>1836</width>
			<height>750</height>
			<orientation>vertical</orientation>
			<onleft>3110</onleft>
			<onright>60</onright>
			<onup>3110</onup>
			<ondown>3010</ondown>
			<preloaditems>4</preloaditems>
			<pagecontrol>60</pagecontrol>
			<itemlayout height="100" width="100">
				<control type="image">
					<width>92%</width>
					<height>92%</height>
					<texture border="5">$INFO[ListItem.Icon]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="150" width="150">
				<control type="image">
					<width>95%</width>
					<height>95%</height>
					<texture border="5">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="textbox">
					<font>Small</font>
					<left>10</left>
					<top>10</top>
					<right>10</right>
					<width>90%</width>
					<height>90%</height>
					<align>left</align>
					<info>ListItem.Label</info>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
			</focusedlayout>
		</control>
		<!-- Sample -->
		<control type="button" id="3013">
			<left>60</left>
			<top>950</top>
			<width>300</width>
			<height>60</height>
			<onup>3110</onup>
			<ondown>SetFocus(3110,1)</ondown>
			<onright>3011</onright>
			<texturefocus colordiffuse="$INFO[Window.Property(colorstring)]" border="5">common/box.png</texturefocus>
			<texturenofocus colordiffuse="$INFO[Window.Property(colorstring)]" border="5">common/box.png</texturenofocus>
		</control>
		<!-- edit label -->
		<control type="button" id="3010">
			<left>540</left>
			<top>950</top>
			<height>60</height>
			<onup>3110</onup>
			<onright>3011</onright>
			<label>$INFO[Window.Property(colorstring),Code: ]</label>
			<label2>$INFO[Window(home).Property(colorstring)]</label2>
			<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
            <include>DefDialogButtons</include>
		</control>
		<!-- Cancel button -->
		<control type="button" id="3011">
			<right>540</right>
			<top>950</top>
			<height>60</height>
			<include>DefDialogButtons</include>
			<onup>3110</onup>
			<onleft>3010</onleft>
			<onright>3012</onright>
			<label>$LOCALIZE[192]</label>
			<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
		</control>
		<!-- Save button -->
		<control type="button" id="3012">
			<right>60</right>
			<top>950</top>
			<height>60</height>
			<include>DefDialogButtons</include>
			<onup>3110</onup>
			<onleft>3011</onleft>
			<label>190</label>
			<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
		</control>
	</controls>
</window>